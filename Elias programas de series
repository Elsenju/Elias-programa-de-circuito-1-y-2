#include <stdio.h>
#include <stdlib.h>

int main()
{
    int cont=0, n, n1, n2;

printf("digita el valor de n\n");
scanf("%d",&n2);

while(cont<=n2)
  {
n=cont;
n1=(n2*n2)-2*n;
printf("%d \n", n1);
cont=cont+1;
  }

  return 0;
}
