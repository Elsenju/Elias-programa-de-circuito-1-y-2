// Elias Xahuentitla Limaº 4A
// Programa Serie Nº 1
#include <stdio.h>
int main ()
{
int cont = 0;
int n;

{
printf ("Escribe un numero:\n");
  scanf ("%d",&n);

while(cont<=n+n+1)

{
    printf("%d\n",(3*n)+(cont*2));

    cont=cont+1;
}
return 0;
}
}

